<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="clr-namespace:System.Windows.Documents;assembly=PresentationUI"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

  <FontFamily x:Key="Font.Common">Microsoft Yahei, simsun, Eurostile</FontFamily>
  <FontFamily x:Key="Font.SystemButton">Webdings</FontFamily>

  <sys:Double x:Key="FontSize.VerySmall">10</sys:Double>
  <sys:Double x:Key="FontSize.Small">11</sys:Double>
  <sys:Double x:Key="FontSize.Normal">12</sys:Double>
  <sys:Double x:Key="FontSize.Big">13</sys:Double>
  <sys:Double x:Key="FontSize.VeryBig">14</sys:Double>

</ResourceDictionary>